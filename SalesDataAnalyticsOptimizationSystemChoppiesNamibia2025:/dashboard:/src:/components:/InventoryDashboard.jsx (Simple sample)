import React from 'react';

const inventory = [
  { product: 'Maize Meal', inStock: 120, lowStock: 10 },
  { product: 'Rice', inStock: 80, lowStock: 5 },
  // Add more products as needed!
];

const InventoryDashboard = () => (
  <section>
    <h2>Inventory Dashboard</h2>
    <table border="1" cellPadding="8" style={{ width: '100%', marginTop: '1rem' }}>
      <thead>
        <tr>
          <th>Product</th>
          <th>In Stock</th>
          <th>Low Stock</th>
        </tr>
      </thead>
      <tbody>
        {inventory.map((item) => (
          <tr key={item.product}>
            <td>{item.product}</td>
            <td>{item.inStock}</td>
            <td>{item.lowStock}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>
);

export default InventoryDashboard;
