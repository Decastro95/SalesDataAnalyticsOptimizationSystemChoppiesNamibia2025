import React from 'react';

const shops = [
  { name: 'Windhoek Central', region: 'Khomas', monthlySales: 1050000 },
  { name: 'Walvis Bay', region: 'Erongo', monthlySales: 650000 },
  // Add more shops as needed!
];

const ShopPerformance = () => (
  <section>
    <h2>Shop Performance</h2>
    <table border="1" cellPadding="8" style={{ width: '100%', marginTop: '1rem' }}>
      <thead>
        <tr>
          <th>Shop</th>
          <th>Region</th>
          <th>Monthly Sales (N$)</th>
        </tr>
      </thead>
      <tbody>
        {shops.map((shop) => (
          <tr key={shop.name}>
            <td>{shop.name}</td>
            <td>{shop.region}</td>
            <td>{shop.monthlySales.toLocaleString()}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>
);

export default ShopPerformance;
