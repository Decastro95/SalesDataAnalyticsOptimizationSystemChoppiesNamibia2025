import React from 'react';

const regions = [
  { name: 'Khomas', population: 420000, shops: 3, revenue: 12800000 },
  { name: 'Erongo', population: 180000, shops: 2, revenue: 7000000 },
  // Add more regions as needed for your report!
];

const RegionalOverview = () => (
  <section>
    <h2>Regional Overview</h2>
    <table border="1" cellPadding="8" style={{ width: '100%', marginTop: '1rem' }}>
      <thead>
        <tr>
          <th>Region</th>
          <th>Population</th>
          <th>Shops</th>
          <th>Revenue (N$)</th>
        </tr>
      </thead>
      <tbody>
        {regions.map((r) => (
          <tr key={r.name}>
            <td>{r.name}</td>
            <td>{r.population.toLocaleString()}</td>
            <td>{r.shops}</td>
            <td>{r.revenue.toLocaleString()}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>
);

export default RegionalOverview;
